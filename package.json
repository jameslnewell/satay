{
  "name": "satay",
  "version": "2.0.0-preview.1",
  "description": "A utility for uploading static sites to AWS S3.",
  "keywords": [
    "aws",
    "s3",
    "bucket",
    "website",
    "static-site",
    "deploy",
    "upload"
  ],
  "repository": "jameslnewell/satay",
  "main": "lib/api/index.js",
  "bin": {
    "satay": "lib/cli/index.js"
  },
  "files": [
    "lib"
  ],
  "engines": {
    "node": ">=4"
  },
  "dependencies": {
    "@types/lodash": "^4.14.117",
    "@types/mime-types": "^2.1.0",
    "@types/minimatch": "^3.0.3",
    "@types/verror": "^1.10.3",
    "@types/yargs": "^12.0.1",
    "aws-sdk": "^2.48.0",
    "chalk": "^2.4.1",
    "finder-on-steroids": "^1.0.3",
    "lodash": "^4.17.11",
    "mime-types": "^2.1.15",
    "minimatch": "^3.0.4",
    "verror": "^1.10.0",
    "yargs": "^12.0.2"
  },
  "devDependencies": {
    "@tradie/node-scripts": "^1.2.1",
    "@types/jest": "^23.3.2",
    "aws-sdk-mock": "^4.2.0",
    "husky": "^1.1.0",
    "lint-staged": "^7.3.0",
    "prettier": "^1.14.3"
  },
  "scripts": {
    "build": "node-scripts build",
    "watch": "node-scripts build --watch",
    "test": "node-scripts test",
    "example": "node-scripts example",
    "prepublishOnly": "npm run build && npm run test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,md,json}": [
      "prettier --write --single-quote --no-bracket-spacing",
      "git add"
    ]
  },
  "license": "MIT"
}
